{
	"version": 0,
	"properties":
	{
		"order": [ "doublesided", "width", "height" ],
		"width": { "default": "return 1", "transformer": "return Math.abs(Number.parseFloat(value)) || 1" },
		"height": { "default": "return 1", "transformer": "return Math.abs(Number.parseFloat(value)) || 1" },
		"doublesided": { "default": "return false", "transformer": "return value ? true : false" }
	},
	"updateVertices": "var mults=[];var halfdims=[width/2,height/2];for(var side=0;side<(doublesided?2:1);side++){mults[0]=side*2-1;for(var i=0;i<4;i++){mults[1]=i%3==0?-1:1;mults[2]=Math.floor(i/2)*2-1;vertex(side*4+i,[halfdims[0]*-mults[0]*mults[1],halfdims[1]*-mults[2],0],[mults[1]/2+.5,mults[2]/2+.5],[0,0,-mults[0]]);}}return false;",
	"buildTriangles": "for(var side=0;side<(doublesided?2:1);side++){var startTriangle=side*2;var startVertex=side*4;triangle(startTriangle,startVertex,startVertex+1,startVertex+3);triangle(startTriangle+1,startVertex+1,startVertex+2,startVertex+3);}return[8,4];"
}