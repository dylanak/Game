{
	"version": 0,
	"properties":
	{
		"order": [ "width", "height" ],
		"width": { "default": "return 1", "transformer": "return Math.abs(Number.parseFloat(value)) || 1" },
		"height": { "default": "return 1", "transformer": "return Math.abs(Number.parseFloat(value)) || 1" }
	},
	"updateVertices": "var mults=[];var halfdims=[width/2,height/2];for(var i=0;i<4;i++){mults[1]=i%3==0?-1:1;mults[2]=Math.floor(i/2)*2-1;vertex(i,[halfdims[0]*mults[1],halfdims[1]*-mults[2],0],[mults[1]/2+.5,mults[2]/2+.5],[0,0,1]);}return false;",
	"buildTriangles": "triangle(0,0,1,3);triangle(1,1,2,3);return[4,2];"
}